<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:layout_marginBottom="8dp"
      android:text="@string/main_activity_description"/>

  <Button
      android:id="@+id/mainActivityButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="32dp"
      android:text="@string/title_activity_main"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:layout_marginBottom="8dp"
      android:text="@string/arch_components_activity_description"/>

  <Button
      android:id="@+id/archComponentsActivityButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="32dp"
      android:text="@string/title_activity_arch_component"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:layout_marginBottom="8dp"
      android:text="@string/kotlin_activity_description"/>

  <Button
      android:id="@+id/kotlinActivityButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/app_name_kotlin"/>

</LinearLayout>
